<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.training.kishore.bestedittext.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_popIn"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <com.alimuzaffar.lib.widgets.AnimatedEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:hint=" Pop In Animation"
            android:padding="15dp"
            android:id="@+id/popIn"
            app:animationType="popIn"
            app:animateCursor="true"
            app:animateTextClear="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_bottomUp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <com.alimuzaffar.lib.widgets.AnimatedEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:hint=" From Bottom Animation"
            android:padding="15dp"
            android:id="@+id/bottomUp"
            app:animationType="fromBottom"
            app:animateCursor="true"
            app:animateTextClear="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_fromRight"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <com.alimuzaffar.lib.widgets.AnimatedEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:hint=" From Right Animation"
            android:padding="15dp"
            android:id="@+id/fromRight"
            app:animationType="fromRight"
            app:animateCursor="true"
            app:animateTextClear="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_fromMiddle"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <com.alimuzaffar.lib.widgets.AnimatedEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:hint=" From Middle Animation"
            android:padding="15dp"
            android:id="@+id/fromMiddle"
            app:animationType="fromMiddle"
            app:animateCursor="true"
            app:animateTextClear="true" />
    </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</ScrollView>
